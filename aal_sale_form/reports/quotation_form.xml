<odoo>
    <template id="aal_quotation_form">
        <div class="header">
            <div class="row">
                <div class="col-5">
                    <div>
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="max-height: 75px;"/>
                    </div>
                    <table class="mt16">
                        <tr>
                            <td colspan="2">
                                25 Soi Phraya Phiren, Chuaploeng Road, Sathon, Bangkok 10120 Thailand
                            </td>
                        </tr>
                        <tr>
                            <td>T. +662 240 1331-2</td>
                            <td>F. +662 249 4283</td>
                        </tr>
                    </table>
                </div>
                <div class="col-7">
                        <h2 class="text-right">QUOTATION</h2><br/>
                    <div class="row">
                        <div class="col-9 text-right">
                            <p>
                                Document No. :<br/>
                                Date :<br/>
                                Page :
                            </p>
                        </div>
                        <div class="col-3">
                            <span t-field="o.name"/><br/>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/><br/>
                            <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="red_line"/>
        </div>
        <div class="article quotation_form">
            <table class="table table-sm table-borderless table_company_data">
                <thead>
                    <tr class="text-center">
                        <th>CUSTOMER DETAILS</th>
                    </tr>
                </thead>
            </table>
            <div class="row">
                <div class="col-8">
                    <table class="table table-sm table-borderless table_company_data">
                        <tbody>
                            <tr>
                                <td>ATTN:</td>
                                <td><span t-field="o.partner_id.name"/></td>
                            </tr>
                            <tr>
                                <td>NAME:</td>
                                <td><span t-field="o.partner_id.name"/></td>
                            </tr>
                            <tr>
                                <td>Address:</td>
                                <td>
                                    <span t-field="o.partner_id.street"/>
                                    <span t-field="o.partner_id.street2"/>
                                    <span t-field="o.partner_id.city"/>
                                    <span t-field="o.partner_id.state_id.name"/>
                                    <span t-field="o.partner_id.country_id.name"/>
                                    <span t-field="o.partner_id.zip"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-4">
                    <table class="table table-sm table-borderless table_company_data">
                        <tbody>
                            <tr>
                                <td>Tel:</td>
                                <td><span t-field="o.partner_id.phone"/></td>
                            </tr>
                            <tr>
                                <td>Fax:</td>
                                <td><span t-field="o.partner_id.fax"/></td>
                            </tr>
                            <tr>
                                <td>E-mail:</td>
                                <td><span t-field="o.partner_id.email"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <table class="table table-sm table-borderless table_data mt16">
                <thead>
                    <tr class="text-center" valign="text-middle">
                        <th>Model No.</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Discount<br/>(%)</th>
                        <th>Unit Price<br/>(after disc.)</th>
                        <th>TOTAL<br/>(THB)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.product_id.default_code"/>
                        </td>
                        <td>
                            <span t-field="line.product_id"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.product_uom_qty"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.discount"/>
                        </td>
                        <td class="text-right">
                            <t t-set="price_unit_after_discount" t-value="(1 - line.discount) * line.price_unit"/>
                            <span t-esc="price_unit_after_discount"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="clearfix">
                <div class="row">
                    <div class="col-6">
                        REMARK.
                    </div>
                    <div class="col-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="text-right">
                                    <strong>TOTAL BEFORE VAT</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>VAT</strong>
                                </td>
                                <td class="text-right">
                                    <t t-set="amount_tax" t-value="o.amount_tax"/>
                                    <span t-esc="amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>Grand Total</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row mt8">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <table class="table table-sm table_managing_director">
                            <thead>
                                <th>MANAGING DIRECTOR</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><br/><br/><br/></td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-sm table_customer">
                            <thead>
                                <th>CUSTOMER</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><br/><br/><br/></td>
                                </tr>
                            </tbody>
                        </table>
                        <p class="mt64 text-right">(............................................................................................)</p>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="aal_quotation_form_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="aal_sale_form.aal_quotation_form"/>
            </t>
        </t>
    </template>
</odoo>
