<odoo>
    <template id="aal_tax_invoice_form">
        <div class="header">
            <div class="row">
                <div class="col-5">
                    <div>
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 75px;"/>
                    </div>
                    <table class="mt16">
                        <tr>
                            <td colspan="2">
                                <span t-field="o.company_id.street"/><br/>
                                <span t-field="o.company_id.street2"/>
                                <span t-field="o.company_id.city"/>
                                <span t-field="o.company_id.state_id.name"/>
                                <span t-field="o.company_id.country_id.name"/>
                                <span t-field="o.company_id.zip"/>
                            </td>
                        </tr>
                        <tr>
                            <td>T. <span t-field="o.company_id.phone"/></td>
                            <td>F. +662 249 4283</td>
                        </tr>
                        <tr>
                            <td>TAX ID NO.: <span t-field="o.company_id.vat"/></td>
                            <td>Branch: <span t-field="o.company_id.partner_id.branch"/></td>
                        </tr>
                    </table>
                </div>
                <div class="col-7">
                    <h4 class="text-right">
                        <t t-if="i == 0">
                            DELIVERY ORDER/TAX INVOICE (ORIGINAL)
                        </t>
                        <t t-else="">
                            DELIVERY ORDER/TAX INVOICE (COPY)
                        </t>
                    </h4>
                    <div class="row mt32">
                        <div class="col-6 text-right">
                            <p>
                                Document No. :<br/>
                                Order No. :<br/>
                                Date :<br/>
                                Page :
                            </p>
                        </div>
                        <div class="col-6">
                            <span t-field="o.origin"/><br/>
                            <span/><br/>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/><br/>
                            <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="article tax_invoice_form">
            <table class="table table-sm table-borderless table_company_data">
                <thead>
                    <tr class="text-center">
                        <th>CUSTOMER DETAILS</th>
                    </tr>
                </thead>
            </table>
            <div class="row">
                <div class="col-7">
                    <div class="row">
                        <div class="col-3">
                            NAME :<br/>
                            TAX ID NO. :<br/>
                            ADDRESS :
                        </div>
                        <div class="col-9">
                            <span t-field="o.partner_id.name"/><br/>
                            <span t-field="o.partner_id.vat"/><br/>
                            <span t-field="o.partner_id.street"/>
                            <span t-field="o.partner_id.street2"/>
                            <span t-field="o.partner_id.city"/>
                            <span t-field="o.partner_id.state_id.name"/>
                            <span t-field="o.partner_id.country_id.name"/>
                            <span t-field="o.partner_id.zip"/>
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="row">
                        <div class="col-3">
                            PO.NO. :
                            TERM :
                        </div>
                        <div class="col-9">
                            <span t-field="o.reference"/>
                            <span t-field="o.payment_term_id"/>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-sm table-borderless table_data mt16">
                <thead>
                    <tr class="text-center" valign="text-middle">
                        <th>Model No.</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Discount<br/>(%)</th>
                        <th>Unit Price<br/>(after disc.)</th>
                        <th>TOTAL<br/>(THB)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.invoice_line_ids" t-as="line">
                        <td>
                            <span t-field="line.product_id.default_code"/>
                        </td>
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.quantity"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.discount"/>
                        </td>
                        <td class="text-right">
                            <t t-set="price_unit_after_discount" t-value="line.price_subtotal / line.quantity"/>
                            <span t-esc="'{0:,.2f}'.format(price_unit_after_discount)"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="'{0:,.2f}'.format(line.price_subtotal)"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="clearfix">
                <div class="row">
                    <div class="col-7 mt64">
                        <small>
                            RECEIVED THE ABOVE IN GOOD ORDER AND CONDITION AT PRICE SHOWN
                        </small>
                    </div>
                    <div class="col-5">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="text-right">
                                    <strong>TOTAL BEFORE VAT</strong>
                                </td>
                                <td class="text-right horizontal_line">
                                    <span t-esc="'{0:,.2f}'.format(o.amount_untaxed)"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>VAT 7%</strong>
                                </td>
                                <td class="text-right horizontal_line">
                                    <span t-esc="'{0:,.2f}'.format(o.amount_tax)"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>Grand Total</strong>
                                </td>
                                <td class="text-right horizontal_double_line">
                                    <span t-esc="'{0:,.2f}'.format(o.amount_total)"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row mt8">
                    <div class="col-4">
                        <table class="table table-sm table_signature">
                            <thead>
                                <th>Received by:</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><br/><br/><br/></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-3">
                                Date :
                            </div>
                            <div class="col-9 horizontal_line">
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <table class="table table-sm table_signature">
                            <thead>
                                <th>Delivered by:</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><br/><br/><br/></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-3">
                                Date :
                            </div>
                            <div class="col-9 horizontal_line">
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <table class="table table-sm table_signature">
                            <thead>
                                <th>Authorised Signature:</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><br/><br/><br/></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-3">
                                Date :
                            </div>
                            <div class="col-9 horizontal_line">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer text-right">
            <t t-if="i &lt; 2">
                FOR CUSTOMER / สำหรับลูกค้า
            </t>
            <t t-else="">
                FOR COMPANY / สำหรับบริษัท
            </t>
        </div>
    </template>

    <template id="aal_tax_invoice_form_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="ncopies" t-value="4"/>
                <t t-foreach="range(ncopies)" t-as="i">
                    <t t-call="aal_account_form.aal_tax_invoice_form"/>
                </t>
            </t>
        </t>
    </template>
</odoo>
