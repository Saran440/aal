<odoo>
    <template id="aal_purchase_order_form">
        <div class="header">
            <div class="row">
                <div class="col-5">
                    <div>
                        <img src='/aal_purchase_form/static/src/img/aal_logo.jpg' style="max-height: 75px;"/>
                    </div>
                    <table class="mt16">
                        <tr>
                            <td colspan="2">
                                25 Soi Phraya Phiren, Chuaploeng Road, Sathon, Bangkok 10120 Thailand
                            </td>
                        </tr>
                        <tr>
                            <td>T. +662 240 1331-2</td>
                            <td>F. +662 249 4283</td>
                        </tr>
                    </table>
                </div>
                <div class="col-7">
                    <h2 class="text-right">PURCHASE ORDER</h2><br/>
                    <div class="row">
                        <div class="col-9 text-right">
                            <p>
                                Document No. :<br/>
                                Date :<br/>
                                Page :
                            </p>
                        </div>
                        <div class="col-3">
                            <span t-field="o.name"/><br/>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/><br/>
                            <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="red_line"/>
        </div>
        <div class="article purchase_order_form">
            <div class="row">
                <div class="col-6">
                    <div class="row table" style="margin-left: 0px;">
                        <div class="col-6 topic">
                            <b>DELIVERY METHOD</b>
                        </div>
                        <div class="col-6 content">
                            <span/>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="row table" style="margin-left: 0px;">
                        <div class="col-4 topic">
                            <b>INCOTERM</b>
                        </div>
                        <div class="col-2 content"/>
                        <div class="col-4 topic">
                            <b>CURRENCY</b>
                        </div>
                        <div class="col-2 content"/>
                    </div>
                </div>
            </div>
            <div class="row mt8">
                <div class="col-6">
                    <table class="table table-sm table-borderless table_company_data">
                        <thead>
                            <tr>
                                <th colspan="2">VENDOR</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Name:</td>
                                <td><span t-field="o.partner_id"/></td>
                            </tr>
                            <tr>
                                <td>Address:</td>
                                <td>
                                    <span t-field="o.partner_id.street"/>
                                    <span t-field="o.partner_id.street2"/>
                                    <span t-field="o.partner_id.city"/>
                                    <span t-field="o.partner_id.state_id.name"/>
                                    <span t-field="o.partner_id.country_id.name"/>
                                    <span t-field="o.partner_id.zip"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Tel:</td>
                                <td><span t-field="o.partner_id.phone"/></td>
                            </tr>
                            <tr>
                                <td>Fax:</td>
                                <td><span t-field="o.partner_id.fax"/></td>
                            </tr>
                            <tr>
                                <td>E-mail:</td>
                                <td><span t-field="o.partner_id.email"/></td>
                            </tr>
                            <tr>
                                <td>Attn:</td>
                                <td><span t-field="o.partner_id.name"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-6">
                    <table class="table table-sm table-borderless table_company_data">
                        <thead>
                            <tr>
                                <th colspan="2">SHIP TO</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Name:</td>
                                <td><span t-field="o.company_id.name"/></td>
                            </tr>
                            <tr>
                                <td>Address:</td>
                                <td>
                                    <span t-field="o.company_id.street"/>
                                    <span t-field="o.company_id.street2"/>
                                    <span t-field="o.company_id.city"/>
                                    <span t-field="o.company_id.state_id.name"/>
                                    <span t-field="o.company_id.country_id.name"/>
                                    <span t-field="o.company_id.zip"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Tel:</td>
                                <td><span t-field="o.company_id.phone"/></td>
                            </tr>
                            <tr>
                                <td>Fax:</td>
                                <td>+662 249 4283</td>
                            </tr>
                            <tr>
                                <td>E-mail:</td>
                                <td><span t-field="o.partner_id.email"/></td>
                            </tr>
                            <tr>
                                <td>Attn:</td>
                                <td>Mr.Nat Yisunsri</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <table class="table table-borderless table_data mt16">
                <thead>
                    <tr class="text-center">
                        <th>MODEL NUMBER - DESCRIPTION</th>
                        <th>QUANTITY</th>
                        <th>UOM</th>
                        <th>Unit Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.product_qty"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.product_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="clearfix">
                <div class="row">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="text-right">
                                    <strong>TOTAL BEFORE VAT</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>VAT</strong>
                                </td>
                                <td class="text-right">
                                    <t t-set="amount_tax" t-value="o.amount_tax"/>
                                    <span t-esc="amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>Grand Total</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row mt8">
                    <div class="col-6">
                        <table class="table table-sm table_company_data">
                            <thead>
                                <th>***Note / Instruction***</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <t t-if="o.notes">
                                        <td><span t-field="o.notes"/></td>
                                    </t>
                                    <t t-if="not o.notes">
                                        <td><br/><br/><br/></td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-6">
                        <table class="table table-sm table_approve">
                            <thead>
                                <th>APPROVED BY</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><br/><br/><br/></td>
                                </tr>
                            </tbody>
                        </table>
                        <p class="mt64 text-right">(............................................................................................)</p>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="aal_purchase_order_form_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="aal_purchase_form.aal_purchase_order_form"/>
            </t>
        </t>
    </template>
</odoo>
